<br>
<div class="container">
	<div class="row align-items-center">
		<div class="col-lg-6 offset-lg-3">
			<div class="card">
				<div class="card-body">
					<%= form_tag create_story_path, {method: :post} do %>
						<div class="form-group">
							<%= text_area_tag "story", nil, placeholder: "Write a story", rows: 8, class: "form-control" %>
						</div>
						<div class="form-group">
							<%= submit_tag "Submit your story", class: "btn btn-primary" %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
<br>
<div class="container">
	<% @stories.each do |story| %>
		<div class="row align-items-center">
			<div class="col-lg-6 offset-lg-3">
				<div class="card">
					<div class="card-body">
						<p><%= simple_format story.text %></p>
						
						<p class="text-muted">Submitted <%= story.created_at.in_time_zone("America/New_York").strftime("%m/%d/%Y %I:%M %p") %></p>
					</div>
				</div>
			</div>
		</div>
		<br>
	<% end %>
</div>